{"ast":null,"code":"import Boadcast from \"@/components/Boadcast/Boadcast.vue\";\nimport Player from \"@/components/Player/Player.vue\";\nimport AdvertisingBoard from \"@/components/AdvertisingBoard/AdvertisingBoard.vue\";\nexport default {\n  data() {\n    return {\n      population: 0,\n      username: '',\n      roomid: \"\",\n      yourWord: \"\",\n      //准备数据，渲染桌面\n      playerData: [],\n      isHost: false,\n      toptext: \"欢迎来到谁是卧底\",\n      reconnection: false\n    };\n  },\n\n  methods: {\n    GameStart() {\n      if (this.playerData.length < 4) {\n        this.$notify({\n          type: \"warning\",\n          message: \"人数不足4人，无法开启游戏\"\n        });\n        return;\n      }\n\n      this.socket.emit(\"gameBegin\");\n    }\n\n  },\n  computed: {\n    leftPlayerData() {\n      let length = this.playerData.length;\n      if (length > 12) return [{\n        username: \"erro\",\n        imgSrc: \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\n        id: \"erro\"\n      }];\n      let realCount = 0;\n      if (length % 2 === 0) realCount = length / 2;else realCount = Math.floor(length / 2);\n      return this.playerData.slice(0, realCount);\n    },\n\n    rightPlayerData() {\n      let length = this.playerData.length;\n      if (length > 12) return [{\n        username: \"erro\",\n        imgSrc: \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\n        id: \"erro\"\n      }];\n      let realCount = 0;\n      if (length % 2 === 0) realCount = length / 2;else realCount = Math.floor(length / 2);\n      return this.playerData.slice(realCount);\n    }\n\n  },\n  components: {\n    Boadcast,\n    Player,\n    AdvertisingBoard,\n    Player,\n    AdvertisingBoard\n  },\n\n  beforeCreate() {\n    this.$bus.$on(\"receiveRoomDatas\", object => {\n      this.roomid = object.roomid;\n    });\n    this.$bus.$on(\"HeisHost\", isHost => {\n      this.isHost = isHost;\n    });\n    this.$bus.$on(\"addRoom\", playerData => {\n      this.playerData = playerData;\n    });\n  },\n\n  mounted() {\n    this.socket.on(\"receive_word\", word => {\n      this.toptext = \"您收到的词汇是\" + word;\n      this.yourWord = word; // this.isHost=false\n\n      window.setTimeout(() => {\n        console.log(this.socket.rooms);\n      }, 2000);\n    });\n    this.socket.io.on(\"reconnect\", () => {\n      // 重连事件\n      this.reconnection = true;\n\n      if (isHost) {\n        this.socket.emit(\"addRoom\", {\n          username: values.username,\n          roomid: this.roomid,\n          population: values.population,\n          isHost: true\n        });\n      } else {\n        this.socket.emit(\"addRoom\", {\n          username: values.username,\n          roomid: this.roomid\n        });\n      }\n    });\n  }\n\n};","map":{"version":3,"mappings":"AAgDA;AACA;AACA;AACA;EACAA;IACA;MACAC,aADA;MAEAC,YAFA;MAGAC,UAHA;MAIAC,YAJA;MAKA;MACAC,cANA;MAOAC,aAPA;MAQAC,mBARA;MASAC;IATA;EAWA,CAbA;;EAcAC;IACAC;MACA;QACA;UAAAC;UAAAC;QAAA;QACA;MACA;;MACA;IACA;;EAPA,CAdA;EAuBAC;IACAC;MACA;MACA,iBACA,QACA;QACAZ,gBADA;QAEAa,QACA,6FAHA;QAIAC;MAJA,CADA;MAQA;MACA,kDACAC;MACA;IACA,CAhBA;;IAiBAC;MACA;MACA,iBACA,QACA;QACAhB,gBADA;QAEAa,QACA,6FAHA;QAIAC;MAJA,CADA;MAQA;MACA,kDACAC;MACA;IACA;;EAhCA,CAvBA;EAyDAE;IACAC,QADA;IAEAC,MAFA;IAGAC,gBAHA;IAIAD,MAJA;IAKAC;EALA,CAzDA;;EAgEAC;IACA;MACA;IACA,CAFA;IAGA;MACA;IACA,CAFA;IAGA;MACA;IACA,CAFA;EAGA,CA1EA;;EA2EAC;IACA;MACA;MACA,qBAFA,CAGA;;MACAC;QACAC;MACA,CAFA,EAEA,IAFA;IAGA,CAPA;IASA;MACA;MACA;;MACA;QACA;UACAxB,yBADA;UAEAC,mBAFA;UAGAF,6BAHA;UAIAK;QAJA;MAMA,CAPA,MAOA;QACA;UACAJ,yBADA;UAEAC;QAFA;MAIA;IACA,CAhBA;EAiBA;;AAtGA","names":["data","population","username","roomid","yourWord","playerData","isHost","toptext","reconnection","methods","GameStart","type","message","computed","leftPlayerData","imgSrc","id","realCount","rightPlayerData","components","Boadcast","Player","AdvertisingBoard","beforeCreate","mounted","window","console"],"sourceRoot":"src/views/Desk","sources":["Desk.vue"],"sourcesContent":["<template>\r\n  <div class=\"desk\">\r\n    <!-- 上面区域 -->\r\n    <boadcast :text=\"toptext\" />\r\n    <div class=\"content\">\r\n      <!-- 左边区域 -->\r\n      <div class=\"left\">\r\n        <player\r\n          v-for=\"item in leftPlayerData\"\r\n          :key=\"item.id\"\r\n          :src=\"item.imgSrc\"\r\n          :username=\"item.username\"\r\n        />\r\n      </div>\r\n      <!-- 中间区域 -->\r\n      <div class=\"mid\">\r\n        <advertising-board v-if=\"!reconnection\"\r\n          >房间号:{{ roomid }}</advertising-board\r\n        >\r\n        <p v-if=\"!reconnection\">我的词语:{{ yourWord }}</p>\r\n        <van-button\r\n          size=\"large\"\r\n          v-if=\"isHost\"\r\n          round\r\n          hairline\r\n          icon=\"guide-o\"\r\n          type=\"primary\"\r\n          @click=\"GameStart\"\r\n          >开始游戏</van-button\r\n        >\r\n        <van-loading type=\"spinner\" v-if=\"reconnection\" color=\"#ff0000\" />\r\n      </div>\r\n      <!-- 右边区域 -->\r\n      <div class=\"right\">\r\n        <player\r\n          v-for=\"item in rightPlayerData\"\r\n          :key=\"item.id\"\r\n          :src=\"item.imgSrc\"\r\n          :username=\"item.username\"\r\n        />\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 下边区域 -->\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Boadcast from \"@/components/Boadcast/Boadcast.vue\";\r\nimport Player from \"@/components/Player/Player.vue\";\r\nimport AdvertisingBoard from \"@/components/AdvertisingBoard/AdvertisingBoard.vue\";\r\nexport default {\r\n  data() {\r\n    return {\r\n      population:0,\r\n      username:'',\r\n      roomid: \"\",\r\n      yourWord: \"\",\r\n      //准备数据，渲染桌面\r\n      playerData: [],\r\n      isHost: false,\r\n      toptext: \"欢迎来到谁是卧底\",\r\n      reconnection: false,\r\n    };\r\n  },\r\n  methods: {\r\n    GameStart() {\r\n      if (this.playerData.length < 4) {\r\n        this.$notify({ type: \"warning\", message: \"人数不足4人，无法开启游戏\" });\r\n        return;\r\n      }\r\n      this.socket.emit(\"gameBegin\");\r\n    },\r\n  },\r\n  computed: {\r\n    leftPlayerData() {\r\n      let length = this.playerData.length;\r\n      if (length > 12)\r\n        return [\r\n          {\r\n            username: \"erro\",\r\n            imgSrc:\r\n              \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\r\n            id: \"erro\",\r\n          },\r\n        ];\r\n      let realCount = 0;\r\n      if (length % 2 === 0) realCount = length / 2;\r\n      else realCount = Math.floor(length / 2);\r\n      return this.playerData.slice(0, realCount);\r\n    },\r\n    rightPlayerData() {\r\n      let length = this.playerData.length;\r\n      if (length > 12)\r\n        return [\r\n          {\r\n            username: \"erro\",\r\n            imgSrc:\r\n              \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\r\n            id: \"erro\",\r\n          },\r\n        ];\r\n      let realCount = 0;\r\n      if (length % 2 === 0) realCount = length / 2;\r\n      else realCount = Math.floor(length / 2);\r\n      return this.playerData.slice(realCount);\r\n    },\r\n  },\r\n  components: {\r\n    Boadcast,\r\n    Player,\r\n    AdvertisingBoard,\r\n    Player,\r\n    AdvertisingBoard,\r\n  },\r\n  beforeCreate() {\r\n    this.$bus.$on(\"receiveRoomDatas\", (object) => {\r\n      this.roomid = object.roomid;\r\n    });\r\n    this.$bus.$on(\"HeisHost\", (isHost) => {\r\n      this.isHost = isHost;\r\n    });\r\n    this.$bus.$on(\"addRoom\", (playerData) => {\r\n      this.playerData = playerData;\r\n    });\r\n  },\r\n  mounted() {\r\n    this.socket.on(\"receive_word\", (word) => {\r\n      this.toptext = \"您收到的词汇是\" + word;\r\n      this.yourWord = word;\r\n      // this.isHost=false\r\n      window.setTimeout(() => {\r\n        console.log(this.socket.rooms);\r\n      }, 2000);\r\n    });\r\n\r\n    this.socket.io.on(\"reconnect\", () => {\r\n      // 重连事件\r\n      this.reconnection = true;\r\n      if (isHost) {\r\n        this.socket.emit(\"addRoom\", {\r\n          username: values.username,\r\n          roomid: this.roomid,\r\n          population: values.population,\r\n          isHost: true,\r\n        });\r\n      } else {\r\n        this.socket.emit(\"addRoom\", {\r\n          username: values.username,\r\n          roomid: this.roomid,\r\n        });\r\n      }\r\n    });\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped lang='scss'>\r\n.desk {\r\n  height: 100vh;\r\n  background: url(\"@/assets/images/desk.jpg\");\r\n  background-size: 100%;\r\n}\r\n.content {\r\n  display: flex;\r\n  width: 100%;\r\n  height: 80vh;\r\n\r\n  .left {\r\n    flex: 1;\r\n  }\r\n  .mid {\r\n    position: relative;\r\n    flex: 2;\r\n    text-align: center;\r\n    .van-button {\r\n      position: absolute;\r\n      top: 50%;\r\n      left: 50%;\r\n      transform: translate(-50%) translateY(-50%);\r\n    }\r\n  }\r\n  .right {\r\n    flex: 1;\r\n  }\r\n  .left,\r\n  .right {\r\n    display: flex;\r\n    flex-direction: column;\r\n    justify-content: space-around;\r\n    align-items: center;\r\n  }\r\n}\r\n</style>"]},"metadata":{},"sourceType":"module"}