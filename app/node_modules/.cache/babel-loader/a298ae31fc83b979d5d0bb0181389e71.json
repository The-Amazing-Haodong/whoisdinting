{"ast":null,"code":"import Boadcast from \"@/components/Boadcast/Boadcast.vue\";\nimport Player from \"@/components/Player/Player.vue\";\nimport AdvertisingBoard from \"@/components/AdvertisingBoard/AdvertisingBoard.vue\";\nimport Card from \"@/components/Card/Card.vue\";\nimport Pannel from \"@/components/Pannel/Pannel.vue\";\nexport default {\n  data() {\n    return {\n      population: 0,\n      username: \"\",\n      roomid: \"\",\n      yourWord: \"\",\n      //准备数据，渲染桌面\n      playerData: [],\n      isHost: false,\n      toptext: \"欢迎来到谁是卧底，等待房主开始游戏\",\n      reconnection: false,\n      gaming: false,\n      turnover: \"\",\n      showing: \"\",\n      arise: false,\n      showThisWordDetail: \"\",\n      isFirst: false,\n      toall: \"<span>nihao<span/>\",\n      voting: false\n    };\n  },\n\n  methods: {\n    GameStart() {\n      /*  if (this.playerData.length < 4) {\r\n        this.$notify({ type: \"warning\", message: \"人数不足4人，无法开启游戏\" });\r\n        return;\r\n      } */\n      this.isHost = false;\n      this.socket.emit(\"gameBegin\");\n    },\n\n    showsecret() {\n      this.turnover = \"animate__flip animate__animated\";\n      window.setTimeout(() => {\n        this.showing = \"showsecret\"; //更换类名\n\n        this.arise = true;\n        this.turnover = \"\";\n        window.setTimeout(() => {\n          this.showThisWordDetail = this.yourWord;\n          this.gaming = false;\n          this.showing = \"\";\n          this.arise = false;\n        }, 2000);\n      }, 1000);\n    },\n\n    vote(e) {\n      //30s后才能发起投票\n      this.socket.emit(\"vote\"); //让按钮隐藏起来\n    }\n\n  },\n  computed: {\n    leftPlayerData() {\n      let length = this.playerData.length;\n      if (length > 12) return [{\n        username: \"erro\",\n        imgSrc: \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\n        id: \"erro\"\n      }];\n      let realCount = 0;\n      if (length % 2 === 0) realCount = length / 2;else realCount = Math.floor(length / 2);\n      return this.playerData.slice(0, realCount);\n    },\n\n    rightPlayerData() {\n      let length = this.playerData.length;\n      if (length > 12) return [{\n        username: \"erro\",\n        imgSrc: \"https://img1.baidu.com/it/u=592570905,1313515675&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500\",\n        id: \"erro\"\n      }];\n      let realCount = 0;\n      if (length % 2 === 0) realCount = length / 2;else realCount = Math.floor(length / 2);\n      return this.playerData.slice(realCount);\n    }\n\n  },\n  components: {\n    Boadcast,\n    Player,\n    AdvertisingBoard,\n    Player,\n    AdvertisingBoard,\n    Card,\n    Pannel,\n    Card\n  },\n\n  beforeCreate() {\n    this.$bus.$on(\"receiveRoomDatas\", object => {\n      this.roomid = object.roomid;\n      this.username = object.username;\n      this.population = object.population;\n    });\n    this.$bus.$on(\"HeisHost\", isHost => {\n      this.isHost = isHost;\n    });\n    this.$bus.$on(\"addRoom\", playerData => {\n      this.playerData = playerData;\n    });\n  },\n\n  mounted() {\n    this.socket.on(\"receive_word\", word => {\n      this.isFirst = false;\n      this.gaming = true;\n      this.toptext = \"游戏已经开始\";\n      this.yourWord = word;\n    });\n    this.socket.on(\"firstsay\", option => {\n      //轮询，真的，这种代码太捞了\n      let canIdo = window.setInterval(() => {\n        if (this.gaming === false && this.arise === false) {\n          this.toall = option.message;\n          this.isFirst = true;\n          clearInterval(canIdo);\n          this.voting = true;\n        }\n      }, 1000);\n    }); // 插槽改变,改变toall中的值\n\n    this.socket.on(\"voteBegin\", option => {\n      this.toall = option.toall;\n    }); //投票结果接收\n\n    this.socket.on('playerDead', option => {\n      let DeadPlayer = this.playerData.find(item => item.id === option.id);\n      console.log(DeadPlayer);\n      this.toall = `<p>${DeadPlayer.username}被投票出局</p>\n      <p>他的身份是：<span style=\"color:red\">${option.identity}</span></P>\n      `;\n    });\n    this.socket.io.on(\"reconnect\", () => {\n      // 重连事件\n      this.$notify({\n        type: \"warning\",\n        message: \"啊哦，断线了哦，尝试重连中\"\n      });\n      this.reconnection = true;\n\n      if (this.isHost) {\n        this.socket.emit(\"addRoom\", {\n          username: this.username,\n          roomid: this.roomid,\n          population: this.population,\n          isHost: true\n        });\n      } else {\n        this.socket.emit(\"addRoom\", {\n          username: this.username,\n          roomid: this.roomid\n        });\n      }\n\n      this.socket.on(\"connect\", () => {\n        this.reconnection = false;\n      });\n    });\n  }\n\n};","map":{"version":3,"mappings":"AAkFA;AACA;AACA;AACA;AACA;AACA;EACAA;IACA;MACAC,aADA;MAEAC,YAFA;MAGAC,UAHA;MAIAC,YAJA;MAKA;MACAC,cANA;MAOAC,aAPA;MAQAC,4BARA;MASAC,mBATA;MAUAC,aAVA;MAWAC,YAXA;MAYAC,WAZA;MAaAC,YAbA;MAcAC,sBAdA;MAeAC,cAfA;MAgBAC,2BAhBA;MAiBAC;IAjBA;EAmBA,CArBA;;EAsBAC;IACAC;MACA;AACA;AACA;AACA;MACA;MACA;IACA,CARA;;IASAC;MACA;MACAC;QACA,4BADA,CACA;;QACA;QACA;QACAA;UACA;UACA;UACA;UACA;QACA,CALA,EAKA,IALA;MAMA,CAVA,EAUA,IAVA;IAWA,CAtBA;;IAuBAC;MACA;MACA,yBAFA,CAIA;IACA;;EA5BA,CAtBA;EAoDAC;IACAC;MACA;MACA,iBACA,QACA;QACArB,gBADA;QAEAsB,QACA,6FAHA;QAIAC;MAJA,CADA;MAQA;MACA,kDACAC;MACA;IACA,CAhBA;;IAiBAC;MACA;MACA,iBACA,QACA;QACAzB,gBADA;QAEAsB,QACA,6FAHA;QAIAC;MAJA,CADA;MAQA;MACA,kDACAC;MACA;IACA;;EAhCA,CApDA;EAsFAE;IACAC,QADA;IAEAC,MAFA;IAGAC,gBAHA;IAIAD,MAJA;IAKAC,gBALA;IAMAC,IANA;IAOAC,MAPA;IAQAD;EARA,CAtFA;;EAgGAE;IACA;MACA;MACA;MACA;IACA,CAJA;IAKA;MACA;IACA,CAFA;IAGA;MACA;IACA,CAFA;EAGA,CA5GA;;EA6GAC;IACA;MACA;MACA;MACA;MACA;IACA,CALA;IAOA;MACA;MACA;QACA;UACA;UACA;UACAC;UACA;QACA;MACA,CAPA,EAOA,IAPA;IAQA,CAVA,EARA,CAoBA;;IACA;MACA;IACA,CAFA,EArBA,CAyBA;;IACA;MACA;MACAC;MACA;AACA;AACA,OAFA;IAGA,CANA;IAQA;MACA;MACA;QAAAC;QAAAC;MAAA;MACA;;MACA;QACA;UACArC,uBADA;UAEAC,mBAFA;UAGAF,2BAHA;UAIAK;QAJA;MAMA,CAPA,MAOA;QACA;UACAJ,uBADA;UAEAC;QAFA;MAIA;;MACA;QA